<div class="page-header header-filter clear-filter purple-filter" data-parallax="true"">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto">
                <div class="brand">
                    <h2>Assignment 2</h2>
                    <h3>Part 2</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main main-raised">
    <div class="section section-basic">
        <div class="container">
            <div>
            {{#each pastData.[0]}}
                    <div>
                    <h4>{{@key}}</h4>
                    </div>
                    <table id="table" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        {{#each this}}
                            <th> {{@key}}</th>
                        {{/each}}
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                    {{# each this}}
                        <td>{{this}}</td>
                    {{/each}}
                    </tr>
                    </tbody>
                </table>
            {{/each}}
            </div>
            <div>
                <h4>Last 5 days data</h4>
                <ul>
                    <li> max temp= {{pastData.[2].maximumTemp.value}}</li>
                    <li> min temp= {{pastData.[1].minimumTemp.value}}</li>
                    <li> total prec= {{pastData.[3].totalPrec}}</li>
                    <li> avg wind= {{pastData.[4].avgWind}}</li>
                    <li> dominant wind= {{pastData.[5].dominantWind}}</li>
                    <li> avg cloud= {{pastData.[6].avgCloud}}</li>
                </ul>
            </div>
            <div>
                <ol> <div><b>Predictions :</b></div>
                        {{#each forecasts}}
                            <li>
                            {{#each this}}
                                <b>{{@key}}</b>- {{this}}
                            {{/each}}
                            </li>
                        {{/each}}
                    </ol>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#table').dataTable({
            'columnDefs': [
                {'className': 'dt-center', 'targets': '_all'}
            ],
            'pageLength' : {{requiredRows}},
            'ordering' : false,
            'searching' : false,
            'lengthChange' : false,

        });
        table.fnPageChange({{startIndex}}-1,true);
    });
</script>

